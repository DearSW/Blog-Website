            position: absolute;
            top: 0;
            left: 0;
            background: #fafafa;
            min-height: 100%;
            height: 100%;
            width: 80px;
            cursor: pointer;
            border-right: 1px solid #f2f2f2;
            overflow: hidden;
            color: #000;
            transform: translate3d(0,0,0);
            transition: width .3s linear;
            z-index: 5;
            /* 子层叠 */
        }

        .m-lfmenu .band:hover {
            width: 100px;
        }

        .m-lfmenu .band .microanimation {
            position: absolute;
            width: 100%;
            height: 100%;
            background: #d4d4d5;
            opacity: 0;
        }

        .m-lfmenu .band .microanimation.animate {

            animation: change .7s;
        }
        @keyframes change {
            0% {
                opacity: 1;
                height: 0;
                top: 50%;
                left: 50%;
                transform: translate(-50%);
                /* 把动画定位到中心位置开始 */
                width: 100%;
            }
            50% {
                opacity: .6;
            }
            100% {
                opacity: 0;
                height: 100%;
                width: 100%;
                top: 0;
                left: 0;
            }
        }


