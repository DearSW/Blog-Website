    <style>
        /* .m-footer start */
        .m-footer {
            /* absolute 配合 bottom: 0; 来使footer放到页面底 */
            /*position: absolute;*/
            position: relative;
            width: 100%;
            height: 40px;
            background: #0b0b16;
        }

        .m-footer .list {
            /* 联系列表 */
            text-align: center;
            font-size: 12px;
            padding-top: 10px;

        }
        .m-footer .list a {
            display: inline-block;
            color: #f4f4f4;
        }

        .m-footer .list a:hover {
            color: #71beff;
        }
        .m-footer .list .concat {
            display: inline-block;
            margin: 0 5px;
        }
    </style>
</head>
